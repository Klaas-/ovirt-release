Summary:	oVirt repository files
Name:		ovirt-release
Version:	@VERSION@
Release:	1
License:	ASL	
Group:		System Environment/Base
URL:		http://ovirt.org
Source:		%{name}-%{version}.tar.gz
BuildRoot:	%{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:	noarch
Requires:	fedora-release
BuildRequires: automake autoconf

%description
oVirt repository file required to obtain both release and nightly versions.

%prep
%setup -q

%build

%install
rm -rf $RPM_BUILD_ROOT
install -d 755 $RPM_BUILD_ROOT/etc/yum.repos.d
install -m 644 ovirt.repo $RPM_BUILD_ROOT/etc/yum.repos.d

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root,-)
%doc ASL 
%config(noreplace) /etc/yum.repos.d/ovirt.repo

