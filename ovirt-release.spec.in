Summary:	oVirt repository files
Name:		ovirt-release
Version:	@VERSION@
Release:	1
License:	ASL
URL:		http://ovirt.org
Source:		%{name}-%{version}.tar.gz
BuildRoot:	%{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)
BuildArch:	noarch
Requires:   tar
BuildRequires: automake autoconf
Epoch: 0

%package fedora
Summary:    oVirt Repository Files for Fedora systems
Group:		System Environment/Base
Requires:	fedora-release
Obsoletes:  ovirt-release <= 0:4-1
Provides:   ovirt-release = %{epoch}:%{version}-%{release}
Requires:   tar

%package el6
Summary:    oVirt Repository Files for EL6 systems
Group:		System Environment/Base
Requires:	/etc/system-release
Requires:   tar

%description
should be nothing...

%description fedora
oVirt repository file required to obtain stable releases, beta,
and nightly versions for Fedora systems.

%description el6
oVirt repository file required to obtain stable releases, beta,
and nightly versions for EL6 based systems.

%prep
%setup -q

%build

%install
rm -rf $RPM_BUILD_ROOT
install -d 755 $RPM_BUILD_ROOT/etc/yum.repos.d
install -m 644 fedora-ovirt.repo $RPM_BUILD_ROOT/etc/yum.repos.d/ovirt.repo
install -m 644 el6-ovirt.repo $RPM_BUILD_ROOT/etc/yum.repos.d

%clean
rm -rf $RPM_BUILD_ROOT

%files fedora
%defattr(-,root,root,-)
%doc ASL
%config(noreplace) /etc/yum.repos.d/ovirt.repo

%files el6
%defattr(-,root,root,-)
%doc ASL
%config(noreplace) /etc/yum.repos.d/el6-ovirt.repo

